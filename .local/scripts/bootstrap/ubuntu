#! /usr/bin/env bash
### VARIABLES
scripts=$HOME/.local/scripts
# Include functions
source $scripts/bootstrap/ubuntu_functions

### MAIN
echo "Is it the first time you run this script? [y/n]"
read FirstRun
if [[ $FirstRun == y ]]; then
    echo "#! /bin/sh
    export DISTRO=ubuntu" > ~/.config/distro
    brew_install
fi
base_install
#bloat_install
ubuntu_install
if [[ $FirstRun == y ]]; then
    #albert_install
    chrome_install
    #emacs_install
    i3_install
    snap_install
    #steam_install
    vim_install
fi
chsh -s $(which zsh) # Change default shell to zsh
