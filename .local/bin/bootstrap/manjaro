#! /usr/bin/env bash
# Include functions
source ~/.local/bin/bootstrap/arch_functions

### Installation starts here

echo "Is it the first time you run this script? [y/n]"
read FirstRun
cd ~/
if [[ $FirstRun == y ]]; then
    echo "#! /bin/sh
    export DISTRO=manjaro" > ~/.config/distro
fi
cd ~/
sudo pacman -Syu
base_install
vim_install
if [[ $FirstRun == y ]]; then
    yay_install
    apps_AUR_install
    i3_install
    wget -qO- https://git.io/papirus-folders-install | sh # Install folder colors https://github.com/PapirusDevelopmentTeam/papirus-folders
    #cinnamon_install
    #gnome_install
    #plasma_install
    #bloat_install
    #virtualbox_install
    #games_install
    dwall
    #optional
fi

