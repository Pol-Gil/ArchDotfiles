Config {
    font = "xft:Ubuntu:weight=bold:pixelsize=12:antialias=true:hinting=true"
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 90
        , commands = [ Run Weather "EGPF" ["-t"," <tempC>C","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000
            , Run Battery [
            "-t", "<acstatus>: <left>% - <timeleft>",
            "--",
            --"-c", "charge_full",
            "-O", "AC",
            "-o", "Bat",
            "-h", "green",
            "-l", "red"
            ] 10
            , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
            , Run Memory ["-t","Mem: <usedratio>% (<free>M)"] 10
            , Run Swap [] 10
            , Run Date "%a %b %_d %l:%M" "date" 10
            , Run DiskU [("/", "<free>")]
                  ["-L", "20", "-H", "50", "-m", "1", "-p", "3",
                  "--normal", "grey50", "--high", "#a0522d",
                  "--low", "#2f4f4f"] 20
            , Run Com "/bin/bash" ["-c", "echo `light -G | grep -oE '^.[0-9]{0,3}'`%"]  "mybright" 1
            , Run Locks
            , Run Kbd  [("us(dvorak)", "DV"), ("us", "US")]
            , Run Volume "default" "Master" [] 10
            , Run StdinReader
        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{ %locks%   %kbd%   |  %battery%  |  Free: %disku%  |  %default:Master%|  Lum: %mybright% |    <fc=#ee9a00>%date%</fc>"

        -- , template = "%StdinReader% }{ %battery% | Lum: %mybright% | %cpu% | %memory% * %swap%    <fc=#ee9a00>%date%</fc> | %EGPF%"
}
