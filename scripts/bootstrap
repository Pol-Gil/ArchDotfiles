arch_install {
    sudo pacman -S htop ncdu vifm vlc thunderbird virtualbox-qt transmission gvim
    sudo pacman -S dhcpcd git tmux nvidia rxvt-unicode stow exa python3 chromium thunar
    # Fonts
    sudo pacman -S ttf-dejavu ttf-liberation ttf-droid ttf-ubuntu-font-family ttf-roboto noto-fonts ttf-ms-fonts
    #Theme 
    pacman -S gtk-2 gtk-3 LXAppearance arc-gtk-theme 
    # Tmux
    git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
    # AUR 
    pacman -S --needed base-devel
}

i3_install {
    sudo pacman -S i3-gaps feh compton rofi i3blocks python-dbus pulseaudio
    # battery plus
    sudo pacman -S awk bc upower
}
